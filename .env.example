# Supabase (Auth & Storage)
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url_here
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# Database
DATABASE_URL=your_postgres_connection_string_here

# Dodo Payments (Subscription Billing)
NEXT_PUBLIC_DODO_API_KEY=your_dodo_api_key_here
NEXT_PUBLIC_DODO_ENVIRONMENT=sandbox
NEXT_PUBLIC_DODO_PRICE_MONTHLY=your_monthly_price_id_here
NEXT_PUBLIC_DODO_PRICE_YEARLY=your_yearly_price_id_here
NEXT_PUBLIC_DODO_SDK_URL=https://cdn.dodopayments.com/dodo.js
DODO_WEBHOOK_SECRET=your_dodo_webhook_secret_here

# OpenRouter (Prayer Text Generation)
OPENROUTER_API_KEY=your_openrouter_api_key_here
OPENROUTER_MODEL=mistral-small

# ElevenLabs (Voice Prayers - TTS)
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here
ELEVENLABS_VOICE_ID=your_voice_id_here

# Site Configuration
SITE_DOMAIN=https://your-domain.com

# Voice Mode (test or production)
# test: Uses browser TTS with background music for development
# production: Requires subscription for ElevenLabs TTS
NEXT_PUBLIC_VOICE_MODE=production

# Admin (Optional)
ADMIN_API_KEY=your_admin_api_key_here
